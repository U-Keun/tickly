{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tickly",
  "version": "0.7.14",
  "identifier": "com.u-keunsong.tickly",
  "build": {
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Tickly",
        "width": 400,
        "height": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "iOS": {
      "developmentTeam": "3689L65YPY",
      "infoPlist": "Info.ios.plist"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["tickly"]
      }
    }
  }
}
